<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="500dp"
	android:layout_height="300dp"

	>

	<TextView
		android:id="@+id/quantity_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:text="@string/eat_quantity"
		android:textSize="16sp"
		android:textColor="@color/main_base_color"

		>
	</TextView>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:paddingLeft="48dp"
		android:paddingRight="12dp"
		android:paddingTop="4dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
	<car.simple.service.widget.wheel.WheelView
		android:id="@+id/wheel_kg_value"
		android:layout_height="110dp"
		android:layout_width="50dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_weight="1"
		android:background="@color/dark_blue"
		/>
	<car.simple.service.widget.wheel.WheelView
		android:id="@+id/wheel_kg_text"
		android:layout_height="110dp"
		android:layout_width="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		/>
	<car.simple.service.widget.wheel.WheelView
		android:id="@+id/wheel_g_value"
		android:layout_height="110dp"
		android:layout_width="70dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_weight="1"/>
	<car.simple.service.widget.wheel.WheelView
		android:id="@+id/wheel_g_text"
		android:layout_height="110dp"
		android:layout_width="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"/>
	</LinearLayout>

</LinearLayout>