<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/dialog_base_color">

	<ListView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/service_component_list"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/dimen_400dp_h"
		android:clickable="true"
		android:focusable="true"/>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingBottom="4dp">
		<TextView
			android:id="@+id/serv_summary_price"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dimen_50dp_h"
			android:text="Summary Price: "
			android:textSize="16sp"
			android:layout_alignParentLeft="true"
			android:textColor="@color/font_base_color"/>
		<Button
			android:id="@+id/serv_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:text="@string/cancel"
			android:background="@color/white"
			android:layout_below="@+id/serv_summary_price"
			android:layout_alignParentLeft="true"
			android:textColor="@color/main_base_color"/>

		<Button
			android:id="@+id/serv_save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:layout_below="@+id/serv_summary_price"
			android:layout_alignParentRight="true"
			android:text="@string/save"
			android:background="@color/white"
			android:textColor="@color/main_base_color"/>


	</RelativeLayout>



</LinearLayout>