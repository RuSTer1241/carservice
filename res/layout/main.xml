<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="2dp"
	android:background="@drawable/mainshape"
	>

	<LinearLayout
		android:id="@+id/first_segment"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/eat_but"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:src="@drawable/eat_button_sel"
			android:background="@drawable/eat_but_background_sel"
			android:padding="45dp"
			android:layout_margin="2dp"
			android:text="@string/child_eat"/>
        <ImageView
                android:id="@+id/temperature_but"
                android:text="@string/temperature"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
		        android:src="@drawable/temper_but_sel"
		        android:background="@drawable/temper_but_background_sel"
		        android:padding="45dp"
	            android:layout_margin="2dp"
                android:layout_alignParentRight="true"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/second_segment"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:layout_below="@id/first_segment"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/crap_but"
			android:text="@string/crap"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:src="@drawable/crap_but_sel"
			android:background="@drawable/crap_but_background_sel"
			android:padding="45dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_alignParentLeft="true"/>
        <ImageView
                android:id="@+id/pee_but"
                android:text="@string/pees"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
		        android:src="@drawable/pee_but_sel"
		        android:background="@drawable/pee_but_background_sel"
		        android:padding="45dp"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
                android:layout_gravity="right"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/third_segment"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:layout_below="@id/second_segment"
		android:layout_weight="1">

		<ImageView
			android:id="@+id/weight_but"
			android:text="@string/weight"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:src="@drawable/weight_but_sel"
			android:background="@drawable/weight_but_background_sel"
			android:padding="45dp"
			android:layout_margin="2dp"
			android:layout_alignParentLeft="true"/>

		<ImageView
			android:id="@+id/arrow_but"
			android:text="@string/goto_stat"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:src="@drawable/arrow_but_sel"
			android:background="@drawable/arrow_but_background_sel"
			android:padding="45dp"
			android:layout_margin="2dp"
			android:layout_alignParentRight="true"/>
	</LinearLayout>
</LinearLayout>

