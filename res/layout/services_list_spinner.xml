<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="500dp"
	android:layout_height="@dimen/dimen_300dp_h"

	>
	<LinearLayout
		android:id="@+id/eat_quantity_area"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:weightSum="4"
		>
		<TextView
			android:id="@+id/quantity_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:text="@string/component"
			android:textSize="16sp"
			android:textColor="@color/main_base_color"
			>
		</TextView>
		<TextView
			android:id="@+id/service_works_but"
			android:text="Services List"
			android:textColor="@color/white"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_30dp_h"
			android:background="@color/main_base_color"
			android:layout_weight="2"
			android:paddingLeft="@dimen/dimen_4dp_w"
			android:paddingRight="@dimen/dimen_4dp_w"
			/>

	</LinearLayout>
</RelativeLayout>