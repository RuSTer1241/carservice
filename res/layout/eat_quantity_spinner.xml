<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="500dp"
	android:layout_height="@dimen/dimen_300dp_h"

	>
	<LinearLayout
		android:id="@+id/eat_quantity_area"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:weightSum="4"
		>
		<TextView
			android:id="@+id/quantity_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:text="@string/eat_quantity_short"
			android:textSize="16sp"
			android:textColor="@color/main_base_color"

			>
		</TextView>
		<Spinner
			android:id="@+id/quantity_spinner"
			style="@style/TestSpinnerStyle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:background="@color/main_base_color"
			android:spinnerMode="dropdown"
			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/eat_timer_area"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:weightSum="4"
		>
		<TextView
			android:id="@+id/set_timer_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:text="@string/settimer"
			android:textSize="16sp"
			android:textColor="@color/main_base_color"

			>
		</TextView>
		<Spinner
			android:id="@+id/timer_spinner"
			style="@style/TestSpinnerStyle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:spinnerMode="dropdown"
			android:background="@color/main_base_color"
			/>
	</LinearLayout>
</RelativeLayout>