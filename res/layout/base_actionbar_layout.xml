<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="50dp"
	android:background="@color/font_base_color" >

	<LinearLayout
		android:id="@+id/left_area"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_height="fill_parent"
		android:layout_alignParentLeft="true"
		>

		<ImageButton
			android:id="@+id/left_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
			android:src="@null"
			android:background="@drawable/icon" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/work_buttons_area"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_centerVertical="true"
		android:layout_height="fill_parent"
		android:layout_toLeftOf="@+id/right_area">
		<ImageButton
			android:id="@+id/action_chart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/dimen_20dp_w"
			android:background="@null"
			android:visibility="gone"
			android:src="@drawable/chart_line" />
		<ImageButton
			android:id="@+id/share"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/dimen_20dp_w"
			android:background="@null"
			android:src="@drawable/ic_menu_share" />

		<ImageButton
			android:id="@+id/preference"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/dimen_20dp_w"
			android:background="@null"
			android:src="@drawable/action_settingsc3" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/right_area"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="0dp">
		<ImageButton
			android:id="@+id/right_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_centerVertical="true"
			android:background="@null"
			android:src="@drawable/ic_menu_forward"
			android:layout_marginRight="10dp"/>
	</LinearLayout>
</RelativeLayout>